<style>
    .job-body {
        padding: 20px;
        font-size: 25px;
        text-align: justify;
    }
</style>
{{#with job}}
<div class="row">
    <div class="col s12 m2"></div>
    <div class="col s12 m8  job-body">
        <div class="card-title">
            {{#each jobAreas}}
            <a class="tag-button tag">{{area_name}}</a>
            {{/each}}
            <h4 style="font-weight: 600;"><a href="#">{{job_title}}</a></h4>
        </div>
        <div class="card-content">
            <p>{{{job_requirements}}}</p>
            <p>{{{job_todos}}}</p>
            {{#if job_maximal_age}}
            <p>
                Age: {{job_minimal_age}} - {{job_maximal_age}}
            </p>
            {{/if}}
        </div>
        <p>{{job_apply_address}}</p>
        {{#if job_salary}}
        <p>Salaire: {{job_salary}}</p>
        {{/if}}
        <div class="grid-1fr-auto">
            <a href="{{employer_linkedin}}">
                {{#if logo_ref}}
                <img width="50" height="50" src="{{logo_ref}}" alt="logo ref" />
                {{/if}}
                {{employer.employer_name}}
            </a>
            <p style="font-size: 15px; text-align: end;">{{posted_at}}</p>
        </div>
        {{#if sameAreaJobs}}
        <h4 style="font-weight: 400;">Explorer les offres du meme domaine</h4>
        <div id="same-area" class="row">
            {{#each sameAreaJobs}}
            <div class="col s12 m4" style="font-size: 15px;">
                <div class="card">
                    <div class="card-content" style="display: grid; gap: 10px">
                        <div class="card-title">
                            {{#each jobAreas}}
                            <a class="tag-button tag">{{area_name}}</a>
                            {{/each}}
                            <h4><a href="/jobs/{{job_id}}">{{job_title}}</a></h4>
                        </div>
                        <div>
                            <p><i class="material-icons left" style="margin: 0;">location_on</i>{{job_apply_address}}
                            </p>
                            {{#if job_salary}}
                            <p><i class="small material-icons left" style="margin: 0;">attach_money</i>{{job_salary}}
                            </p>
                            {{/if}}
                        </div>
                        <div class="grid-1fr-auto">
                            <a href="{{employer_linkedin}}">
                                {{#if logo_ref}}
                                <img width="50" height="50" src="{{logo_ref}}" alt="logo ref" />
                                {{/if}}
                                {{employer.employer_name}}
                            </a>
                            <p>Publier le {{posted_at}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        {{#if sameEmployerJobs}}
        <h4 style="font-weight: 400;">Explorer les offres du meme enployeur</h4>
        <div id="same-area" class="row">
            {{#each sameEmployerJobs}}
            <div class="col s12 m4" style="font-size: 15px;">
                <div class="card">
                    <div class="card-content" style="display: grid; gap: 10px">
                        <div class="card-title">
                            {{#each jobAreas}}
                            <a class="tag-button tag" href="/">{{area_name}}</a>
                            {{/each}}
                            <h4><a href="/jobs/{{job_id}}">{{job_title}}</a></h4>
                        </div>
                        <div>
                            <p><i class="material-icons left" style="margin: 0;">location_on</i>{{job_apply_address}}
                            </p>
                            {{#if job_salary}}
                            <p><i class="small material-icons left" style="margin: 0;">attach_money</i>{{job_salary}}
                            </p>
                            {{/if}}
                        </div>
                        <div class="grid-1fr-auto">
                            <a href="{{employer_linkedin}}">
                                {{#if logo_ref}}
                                <img width="50" height="50" src="{{logo_ref}}" alt="logo ref" />
                                {{/if}}
                                {{employer.employer_name}}
                            </a>
                            <p>Publier le {{posted_at}}</p>
                        </div>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        {{/if}}
        <p style="font-size: 15px; text-align: center; margin: 5px;"><a class="btn" style="border-radius: 15px;"
                href='/'>Explorer toutes nos offers</a></p>
    </div>
    <div class="col s12 m2"></div>
</div>
{{/with}}