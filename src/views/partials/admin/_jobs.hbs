<style>
    .delete {
        background-color: rgb(236, 90, 90);
    }
</style>
<div id="jobs" class="section scrollspy col m12 row">
    <div class="col s4" style="margin-top: 25px;">
        <a class="waves-effect waves-light btn modal-trigger btn-small" href="#"><i
                class="material-icons left">create</i>Ajouter un job</a>
    </div>
    <div id="total-jobs" class="input-field col s8"
        style="margin-top: 25px; font-size: 25px;text-align: end;">
        {{jobs.length}} jobs
    </div>
    <div>
    </div>
    <table class="striped col s12">
        <thead>
            <tr>
                <th>Poste</th>
                <th>Eployeur</th>
                <th>Address</th>
                <th>Action</th>
            </tr>
        </thead>

        <tbody id="jobs-data">
            {{#each jobs}}
            <tr id="{{job_id}}">
                <td>{{job_title}}</td>
                <td>{{employer_name}}</td>
                <td>{{job_apply_address}}</td>
                <td>
                    <a class="waves-effect waves-light btn-small modal-trigger" href="job-from-{{job_id}}"><i
                            class="material-icons">create</i></a>
                    <a class="waves-effect waves-light btn-small delete" href="/jobs/{{job_id}}/delete"><i
                            class="material-icons">delete_forever</i></a>
                </td>
            </tr>
            {{> modals/_jobform}}
            {{/each}}
        </tbody>
    </table>
</div>