<div class="row modal-content">
    <h5 style="color: var(--background-color);">Ajouter ou editer un recruteur</h5>
    <input name="employer_id" id="employer_id" value="{{employer_id}}" type="text" class="validate" hidden>
    <div class="input-field col s12">
        <input name="employer_name" id="employer_name" value="{{employer_name}}" type="text" class="validate" required>
        <label for="employer_name">Nom du Recruteur*</label>
    </div>
    <div class="input-field col s12">
        <input name="employer_email" id="employer_email" value="{{employer_email}}" type="email" class="validate"
            required>
        <label for="employer_email">Email du Recruteur*</label>
    </div>
    <div class="input-field col s12">
        <input name="employer_telephone" id="employer_telephone" value="{{employer_telephone}}" type="number"
            class="validate">
        <label for="employer_telephone">Numero de Telephone</label>
    </div>
    <div class="input-field col s12">
        <input name="employer_linkedin" id="employer_linkedin" value="{{employer_linkedin}}" type="text"
            class="validate">
        <label for="employer_linkedin">Linkedin</label>
    </div>
    <div class="input-field col s12">
        <input name="employer_website" id="employer_website" value="{{employer_website}}" type="text" class="validate">
        <label for="employer_website">Site web</label>
    </div>
    <div class="input-field col s12">
        <input name="precise_address" id="precise_address" value="{{precise_address}}" type="text" class="validate">
        <label for="precise_address">Adress precise</label>
    </div>
</div>
<div class="modal-footer">
    <button id="str-submit-button" style="border-radius: 30px;" class="btn waves-effect waves-light modal-close"
        type="submit" name="action">Ajouter
    </button>
</div>