<style>
    .home-header {
        background-image: url('/images/shutterstock_412257712-2.jpg');
        min-height: 75vh;
        background-position: center;
        display: grid;
        align-items: center;
        padding: 10px;
        grid-auto-flow: column;
        justify-content: center;
    }

    .home-header>div {
        width: 70vw;
    }

    #search-input {
        width: 70vw;
        max-width: 750px;
        border-radius: 2px;
    }

    #jobs-filter {
        padding: 5px;
        display: grid;
        text-align: center;
    }

    #jobs-filter>div {
        justify-self: center;
    }

    #select-filter>div>input {
        box-shadow: 1px 1px 16px var(--background-color);
        background-color: white;
        box-sizing: border-box;
        border-radius: 15px;
        height: 35px;
        padding: 9px;
    }

    #areas {
        margin-top: 20px;
        display: grid;
        grid-auto-flow: column;
        justify-content: center;
        justify-self: start;
    }
</style>
