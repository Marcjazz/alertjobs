{{#if showJobFilter}}
{{#if job?.job_flyer}}
<div class="home-header" style="background-image: url(/images/{{job_flyer}});">
    <div class="input-field">
        <input type="text" name="search" id="search-input" class="autocomplete" placeholder="Que cherchez-vous ?">
    </div>
</div>
{{else}}
<div class="home-header">
    <div class="input-field">
        <h4 style="font-weight: bold; text-transform: uppercase; text-align: center; color: var(--background-color);">
            Retrouvez les jobs de votre localité</h4>
        <div style="display: grid; grid-auto-flow: column; justify-content: center;">
            <input type="text" name="search" id="search-input" class="autocomplete" placeholder="Que cherchez-vous ?">
        </div>
        <div id="jobs-filter" style="padding: 5px; text-align: center;">
            <h4 style="font-weight: bold;">Quels sont vos critères </h4>
            <div id="select-filter" style="display: flex; gap: 10px;justify-content: center;">
                <select name="location">
                    {{#each countries}}
                    <optgroup label="{{country_name}}">
                        {{#each locations}}
                        <option value="{{location_id}}">{{town}}</option>
                        {{/each}}
                    </optgroup>
                    {{/each}}
                </select>
                <select name="tag">
                    {{#each tags}}
                    <option value="CDD">{{tag_name}}</option>
                    {{/each}}
                </select>
            </div>
        </div>
        <div id="jobs-area" style="text-align: center;"></div>
    </div>
</div>
{{/if}}
{{/if}}